<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="14dp"
    android:id="@+id/main_layout"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlInnner"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/business_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/logo">

        </de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            android:layout_width="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/favourite"
            android:visibility="visible"
            android:src="@drawable/heart_red"
            android:layout_height="25dp">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/business_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/ribbon_layout"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <com.atlanticcity.app.CustomFont.CustomBoldTextView
                android:layout_width="wrap_content"
                android:maxLines="2"
                android:id="@+id/business_name"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content">

            </com.atlanticcity.app.CustomFont.CustomBoldTextView>

            <com.atlanticcity.app.CustomFont.CustomTextView
                android:layout_width="wrap_content"
                android:id="@+id/deal_timgs"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content">

            </com.atlanticcity.app.CustomFont.CustomTextView>

            <com.atlanticcity.app.CustomFont.CustomTextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/dark_gray">

            </com.atlanticcity.app.CustomFont.CustomTextView>

            <com.atlanticcity.app.CustomFont.CustomBoldTextView
                android:layout_width="wrap_content"
                android:text="@string/view_details"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content">

            </com.atlanticcity.app.CustomFont.CustomBoldTextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/ribbon_layout"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/ribbon_layout"
            android:layout_height="wrap_content">

            <com.atlanticcity.app.CustomFont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:id="@+id/no_of_deals"
                android:textColor="@color/white"
                android:layout_height="wrap_content">

            </com.atlanticcity.app.CustomFont.CustomTextView>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>