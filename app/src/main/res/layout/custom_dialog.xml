<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@null"
xmlns:app="http://schemas.android.com/apk/res-auto">


<com.budiyev.android.circularprogressbar.CircularProgressBar
    android:id="@+id/progress_bar"
    android:layout_width="64dp"
    android:layout_height="64dp"
    app:animateProgress="true"
    android:background="@null"
    app:backgroundStrokeColor="@color/white"
    app:backgroundStrokeWidth="2dp"
    app:drawBackgroundStroke="false"
    app:foregroundStrokeCap="butt"
    app:foregroundStrokeColor="@color/colorPrimaryDark"
    app:foregroundStrokeWidth="5dp"
    app:indeterminate="true"
    android:layout_centerInParent="true"
    app:progressAnimationDuration="140"
    app:startAngle="270"/>

</RelativeLayout>