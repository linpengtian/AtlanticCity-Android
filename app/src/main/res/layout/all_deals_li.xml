<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="14dp"
    android:id="@+id/main_layout"
    android:elevation="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/deal_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/logo">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/deal_image"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">
            <com.atlanticcity.app.CustomFont.CustomBoldTextView
                android:layout_width="wrap_content"

                android:id="@+id/deal_title"
                android:layout_marginTop="15dp"
                android:textSize="18sp"

                android:textColor="@color/black"
                android:layout_height="wrap_content">

            </com.atlanticcity.app.CustomFont.CustomBoldTextView>

            <com.atlanticcity.app.CustomFont.CustomTextView
                android:layout_width="wrap_content"
                android:id="@+id/business_name"
                android:maxLines="1"

                android:layout_marginTop="3dp"
                android:drawablePadding="10dp"
                android:textSize="16sp"
                android:layout_height="wrap_content">

            </com.atlanticcity.app.CustomFont.CustomTextView>

            <com.atlanticcity.app.CustomFont.CustomTextView
                android:id="@+id/deal_desciption"
                android:layout_width="wrap_content"
                android:maxLines="1"

                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content">

            </com.atlanticcity.app.CustomFont.CustomTextView>



        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>